extends Components/layout/roompage/_roompage.pug

block photo
  include Assets/room-data/888/_data.pug
  each photo, index in photos
    div.room-image(class='room-image_'+ index)
      img(src=require(`Assets/images/rooms/` + number + `/`+ photo))

block advantage
  each item in advantages
    +advantage(item)
block booking
  - const myData = data.find((el) => el.number === number)
  +booking(myData.type, number, myData.price)
block review
  each item in reviews
    +review(item)
block rules
  +bullet(rules)
block script
  script(src=`./room-pages/` + number +`.js`)