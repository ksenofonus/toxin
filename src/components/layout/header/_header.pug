-const isLogin = false;
mixin header(isLogin)
  header.header
    .header-container
      +logo
      nav.nav
        ul.header__nav
          li.header__nav-item
            a.header__nav-link(href='#about') О нас
          li.header__nav-item.submenu Услуги
            span.material-icons expand_more
          li.header__nav-item
            a.header__nav-link(href='#job') Вакансии
          li.header__nav-item
            a.header__nav-link(href='#news') Новости
          li.header__nav-item.submenu Соглашения
            span.material-icons expand_more
      .header__login
        if !isLogin
          +button("войти")(class="button__border")
          +button("зарегистрироваться")
        else
          span.hatch
          span Юлий Цезарь