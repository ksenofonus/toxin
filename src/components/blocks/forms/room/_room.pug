mixin room(type, number, price)
  .form
    .form-container 
      .room
        .room__info
          //- span №&nbsp;
          span.room__number= number
          |&nbsp;
          span.room_type= type
        .room__price
          span.price #{price}&#8381
          span &nbsp;в сутки
      .datepicker-container
        +label('прибытие')
          +field('text', 'date', '19.08.2019')(class='masked-date datepicker text-field')
        +label('выезд')
          +field('text', 'date', '23.08.2019')(class='masked-date datepicker text-field')
      +dropdown('guest','room-guest', 'гости', '3 гостя',
                {'adults': 'Взрослые',
                'children': 'Дети',
                'infant': 'Младенцы'
                }, true)
      .sum-price 
        .sum-price__row 
          .sum-price__calc
            span #{price}&#8381; x 4 суток
          .sum-price__sum 
            span 39 960&#8381
        .sum-price__row 
          .sum-price__calc
            span Сбор за услуги: скидка 2 179&#8381
            span.information i
          .sum-price__sum 
            span 0&#8381
        .sum-price__row 
          .sum-price__calc
            span Сбор за дополнительные услуги 
            span.information i
          .sum-price__sum 
            span 300&#8381
      .total
        span Итого
        span
        span 38 081&#8381

      +button('забронировать')(class="button__long")