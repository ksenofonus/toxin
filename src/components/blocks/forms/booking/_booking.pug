- const ruble = '&#8381';
mixin booking(type, number, price)
  .form.room-search
    .form-container 
      .room__info
        .room__number
          //- span №&nbsp;
          span.number= number
          span.room_type= type
        .room__price
          span.price #{price}!{ruble}
          span в сутки
      .datepicker-container
        +label('прибытие')
          +field('text', 'date', '19.08.2019')(class='masked-date datepicker text-field')
        +label('выезд')
          +field('text', 'date', '23.08.2019')(class='masked-date datepicker text-field')
      +guestDropdown('гости')
      .sum-price 
        .sum-price__row 
          .sum-price__calc
            span #{price}!{ruble} x 4 суток
          .sum-price__sum 
            span 39 960!{ruble}
        .sum-price__row 
          .sum-price__calc
            span Сбор за услуги: скидка 2 179!{ruble}
            span.information i
          .sum-price__sum 
            span 0!{ruble}
        .sum-price__row 
          .sum-price__calc
            span Сбор за дополнительные услуги 
            span.information i
          .sum-price__sum 
            span 300!{ruble}
      .total
        span Итого
        span.dots
        span 38 081!{ruble}

      +button('забронировать')(class="button__long")